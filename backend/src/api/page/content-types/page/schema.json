{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "singularName": "page",
    "pluralName": "pages",
    "displayName": "Page",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "Title",
      "required": true
    },
    "ParentPage": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::page.page"
    },
    "Content": {
      "type": "dynamiczone",
      "components": [
        "ui.accordion",
        "ui.rich-text-block",
        "ui.grid-section",
        "ui.carousel",
        "ui.cards"
      ],
      "required": true
    },
    "pageBanner": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    }
  }
}
